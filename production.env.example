# Auto AGI Builder Production Environment Configuration
# =========================================================
# This file serves as a template for production environment variables
# IMPORTANT: DO NOT commit actual secrets to version control
# Make a copy of this file as `.env` for local development
# or use a secure environment variable management system for production

# Application Configuration
# -------------------------
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info
PORT=8000
HOST=0.0.0.0
APP_NAME="Auto AGI Builder"
APP_VERSION="1.0.0"
APP_URL=https://auto-agi-builder.com
API_DOMAIN=api.auto-agi-builder.com
TIME_ZONE=UTC

# Security Configuration
# ---------------------
# Generate a secure secret key (min 32 characters) and keep it confidential
SECRET_KEY=replace_with_secure_random_string_min_32_chars
# JWT configuration
JWT_SECRET=replace_with_different_secure_random_string_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
# CORS configuration
ALLOWED_ORIGINS=https://auto-agi-builder.com,https://admin.auto-agi-builder.com
# Rate limiting
RATE_LIMIT_PER_MINUTE=100
# Cookie settings
COOKIE_SECURE=true
COOKIE_SAMESITE=strict
COOKIE_HTTPONLY=true

# Database Configuration
# ---------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@postgres:5432/auto_agi_db
DATABASE_MAX_CONNECTIONS=20
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false
DATABASE_SSL_MODE=require

# Redis Configuration
# -----------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=replace_with_redis_password
REDIS_DB=0
REDIS_SSL=true
REDIS_MAX_CONNECTIONS=10
REDIS_KEY_PREFIX=auto_agi:

# Email Configuration (SendGrid)
# ----------------------------
SENDGRID_API_KEY=replace_with_sendgrid_api_key
DEFAULT_FROM_EMAIL=no-reply@auto-agi-builder.com
SUPPORT_EMAIL=support@auto-agi-builder.com

# OpenAI API Configuration
# -----------------------
OPENAI_API_KEY=replace_with_openai_api_key
OPENAI_ORG_ID=replace_with_openai_org_id
OPENAI_BASE_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT_SECONDS=30

# AWS Configuration
# ---------------
AWS_ACCESS_KEY_ID=replace_with_aws_access_key_id
AWS_SECRET_ACCESS_KEY=replace_with_aws_secret_access_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=auto-agi-builder-production
AWS_S3_KEY_PREFIX=app/uploads/
AWS_CLOUDFRONT_DOMAIN=cdn.auto-agi-builder.com
AWS_S3_PUBLIC_URL=https://cdn.auto-agi-builder.com

# Storage Configuration
# -------------------
STORAGE_PROVIDER=s3  # Options: local, s3
STORAGE_LOCAL_PATH=/app/data/storage
STORAGE_MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_TYPES=.pdf,.docx,.xlsx,.pptx,.txt,.csv,.json,.jpg,.png,.svg

# Monitoring and Logging Configuration
# ---------------------------------
SENTRY_DSN=replace_with_sentry_dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.2
ENABLE_PERFORMANCE_MONITORING=true
LOG_FORMAT=json
LOG_RETENTION_DAYS=30
LOG_FILE_PATH=/var/log/auto-agi

# Analytics Configuration
# ---------------------
GOOGLE_ANALYTICS_ID=replace_with_ga_id
GOOGLE_TAG_MANAGER_ID=replace_with_gtm_id
ENABLE_USAGE_ANALYTICS=true
ANALYTICS_CONSENT_REQUIRED=true

# Vercel Deployment Configuration
# ----------------------------
VERCEL_PROJECT_ID=replace_with_vercel_project_id
VERCEL_ORG_ID=replace_with_vercel_org_id
VERCEL_TOKEN=replace_with_vercel_token
VERCEL_GIT_PROVIDER=github

# Feature Flags
# -----------
ENABLE_COLLABORATION_FEATURES=true
ENABLE_DEVICE_PREVIEW=true
ENABLE_AI_PROTOTYPE_GENERATION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADMIN_DASHBOARD=true
ENABLE_USER_FEEDBACK=true

# Testing Environment Indicator
# ---------------------------
# Set to true ONLY in testing environments, never in actual production
IS_TESTING_ENVIRONMENT=false
