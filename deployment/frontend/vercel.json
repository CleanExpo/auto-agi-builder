{
  "version": 2,
  "root": ".",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "nextRoot": ".",
        "skipAutoInstall": false
      }
    }
  ],
  "env": {
    "NEXT_PUBLIC_DISABLE_STATIC_GENERATION": "true",
    "NEXT_PRIVATE_TARGET": "serverless"
  },
  "rewrites": [
    {
      "source": "/clients/:id*",
      "destination": "/clients/[id]"
    },
    {
      "source": "/projects/:id*",
      "destination": "/projects/[id]"
    },
    {
      "source": "/scheduled-exports/:id*",
      "destination": "/scheduled-exports/[id]"
    }
  ]
}
