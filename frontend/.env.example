# Auto AGI Builder Frontend Environment Configuration
# =========================================================
# This file serves as a template for frontend environment variables
# IMPORTANT: Do not commit actual secrets to version control
# Create a .env.local file with your actual values

# Application Information
# ----------------------
NEXT_PUBLIC_APP_NAME=Auto AGI Builder
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment Settings
# -------------------
# Options: development, production, staging
NEXT_PUBLIC_ENVIRONMENT=development

# API Configuration
# ----------------
# Base URL for backend API calls
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_API_VERSION=v1

# Feature Flags
# ------------
# Enable/disable specific features (true/false)
NEXT_PUBLIC_ENABLE_COLLABORATION=true
NEXT_PUBLIC_ENABLE_DEVICE_PREVIEW=true
NEXT_PUBLIC_ENABLE_AI_PROTOTYPE=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_ADMIN_DASHBOARD=false
NEXT_PUBLIC_ENABLE_USER_FEEDBACK=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# UI Configuration
# --------------
# UI theme: light, dark, auto
NEXT_PUBLIC_THEME=auto
NEXT_PUBLIC_COLOR_MODE=light
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_MAX_UPLOAD_SIZE_MB=10
NEXT_PUBLIC_PASSWORD_MIN_LENGTH=8

# Storage URLs
# -----------
# Base URL for storage access
NEXT_PUBLIC_STORAGE_URL=/storage

# Analytics
# ---------
# Analytics service IDs (not sensitive, publicly visible in browser)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GOOGLE_TAG_MANAGER_ID=

# Date and Time
# ------------
NEXT_PUBLIC_DEFAULT_TIMEZONE=UTC
NEXT_PUBLIC_DATE_FORMAT=YYYY-MM-DD
NEXT_PUBLIC_TIME_FORMAT=HH:mm:ss

# Debug Settings
# -------------
NEXT_PUBLIC_DEBUG=false

# Build-time Environment Variables
# -------------------------------
# These variables are only available at build time, not in the browser
# Used for SSG/SSR and server-side only code

# Backend URL (used for server-side API calls)
BACKEND_URL=http://localhost:8000

# Authentication (used for server-side authentication)
AUTH_SECRET=replace_with_secure_random_string_min_32_chars

# External Service Integration
# ---------------------------
# These are server-side only, never exposed to the browser
SENDGRID_API_KEY=
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Vercel Environment Variables
# ---------------------------
# Used for Vercel deployment configuration
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=
VERCEL_TOKEN=

# Cache Control
# ------------
CACHE_CONTROL_HEADER=public, max-age=3600, stale-while-revalidate=86400

# Content Security Policy
# ---------------------
# CSP for enhanced security, customize for your needs
NEXT_PUBLIC_CSP_CONNECT_SRC="'self' https://api.auto-agi-builder.com https://www.google-analytics.com"
NEXT_PUBLIC_CSP_IMG_SRC="'self' https://cdn.auto-agi-builder.com data: blob:"
NEXT_PUBLIC_CSP_SCRIPT_SRC="'self' 'unsafe-inline' https://www.googletagmanager.com"
