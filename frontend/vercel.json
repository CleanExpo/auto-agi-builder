{
  "version": 2,
  "root": "..",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "skipAutoInstall": false
      }
    },
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    }
  ],
  "env": {
    "NEXT_PUBLIC_DISABLE_STATIC_GENERATION": "true"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app/main.py"
    },
    {
      "src": "/clients/:id",
      "dest": "/clients/[id]"
    },
    {
      "src": "/projects/:id",
      "dest": "/projects/[id]"
    },
    {
      "src": "/scheduled-exports/:id",
      "dest": "/scheduled-exports/[id]"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
